# Configuración de la Base de Datos
DB_HOST=localhost
DB_NAME=b2b_database
DB_USER=root
DB_PASS=password
DB_PORT=3306

# Configuración del Sistema
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost/b2b
APP_NAME="Sistema B2B AnimalsCenter"

# Configuración de Seguridad
SESSION_LIFETIME=120
SECURE_COOKIES=false
ALLOWED_IPS=127.0.0.1,::1

# Configuración de API ERP
ERP_API_URL=https://erp.animalscenter.cl/api
ERP_API_KEY=your_api_key_here
ERP_API_TIMEOUT=30

# Configuración de Correo
MAIL_HOST=smtp.animalscenter.cl
MAIL_PORT=587
MAIL_USERNAME=soporteb2b@animalscenter.cl
MAIL_PASSWORD=your_password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=soporteb2b@animalscenter.cl
MAIL_FROM_NAME="${APP_NAME}"
